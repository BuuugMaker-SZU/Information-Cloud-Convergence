body {
  margin: 0;
  padding: 0;
}
.container {
  margin-top: -70px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input-container {
  margin-top: 5px;
  margin-bottom: 15px;
  display: flex;
  align-items: center;
}
text{
  white-space: nowrap;
  width: 90%;
  margin-left: -130px;
  margin-right: 30px;
  text-align: right;
}

input {
  border: 1px solid #ccc;
  padding: 8px;
  width: 300px;
  margin-right: -15px;
  margin-left: -28px;
  /* box-sizing: border-box; */
}
picker{
  border: 1px solid #ccc;
  padding: 8px;
  width: 295px;
  margin-right: -50px;
  margin-left: -28px;
}
textarea{
  border: 1px solid #ccc;
  margin-right: -15px;
  margin-left: -28px;
  width: 320px;
}
button {
  margin-top: 20px;
  padding: 10px 20px;
  font-size: 16px;
  background-color: #577A88;
  color: white;
}

.upload-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-container {
  margin-bottom: 10px; /* 调整图片和按钮之间的间距 */
}

.uploaded-image {
  width: 100px; /* 设置图片的宽度，根据需要调整 */
  height: 100px; /* 设置图片的高度，根据需要调整 */
  border: 1px solid #ccc; /* 可选：添加边框效果 */
}

.upload-button {
  display: flex;
  justify-content: center;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}




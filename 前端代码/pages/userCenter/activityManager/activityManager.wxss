/* pages/userCenter/activityManager/activityManager.wxss */
.content{
  width: 100%;
  height: 620px;
  background-color: #f5f5f5;
}

.group-content{ 
  display: flex;
  justify-content: space-between; /* 将子元素分散对齐，确保button位于模块的水平中线上 */
  align-items: center; /* 将子元素在纵轴上居中对齐 */
  border: 1px solid white; /* 添加边框 */
  border-radius: 8px;
  margin-top: 10px;
  margin-bottom: 10px;    /* 设置底部间距 */
  margin-left: 5px;
  margin-right: 5px;
  padding: 5px;          /* 设置内边距 */
  background-color: white;
 } 
 .group{ 
   flex: 1;
   margin-left: 10px; 
   display: inline-block; 
   width: 200px; 
 } 
 .group text {
  white-space: pre-line; /* 允许文本换行 */
  margin-bottom: 2px;
}
.introduction{
  display: flex;
  justify-content: flex-start;
  height: 25px;
  width: 255px;
  font-size: 15px;
  padding-bottom: 30rpx;
  padding-top: 20rpx;
  margin-top: -15rpx;
  overflow: hidden; /* 隐藏溢出内容 */
  display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2; /* 限制为两行 */
  text-overflow: ellipsis; /* 显示省略号 */
}
 .group-button{ 
   display: inline-block; 
   height: 40rpx; 
   width: 80rpx; 
   border: none; 
   border-radius: 8rpx; 
   text-align: center; 
   margin-right: 60px;
   margin-left: 10px;
   margin-top: -60px;
 } 

 .custom-button{
   margin-bottom: 15px;
   margin-left: 15px;
 }
.scroll-button{
  text-align: center;
  font-weight: lighter;
  font-size: 15px;
  margin-top: 15px;
}


.floating-button {
  top:10px;
  background-color: #577A88;
  color: white;
  width: 50px;
  height: 50px;
  border-radius: 5%;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 10px;
}

.bottom-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 10px; /* 可根据需要添加底部容器的内边距 */
  box-sizing: border-box;
  background-color: transparent; /* 设置容器的背景色 */
  margin-bottom: 15px;
}


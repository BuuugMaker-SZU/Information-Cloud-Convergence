
.container1 {
  display: flex;
  flex-direction: column;
  /*align-items: flex-start;*/
  padding: 45rpx;
  width: 640rpx; /* 调整宽度为600rpx */
  height: 780rpx;
  border-radius: 5mm;

  
}

.container2 {
  display: flex;
  flex-direction: column;
  /*align-items: flex-start;*/
  padding: 45rpx;
  width: 640rpx; /* 调整宽度为600rpx */
  height: 400rpx;
  border-radius: 5mm;

}
.container1, .container2 {
  background-color: #fff; /* 设置背景颜色为白色 */
  border: 1rpx solid #f5f5f5; /* 设置边框为灰色 */
  padding: 20rpx;
  
}
.picker view {
  font-size: 30px; /* 调整选项的字体大小 */
  padding: 20rpx;
}


.form-group , .pick{
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  margin-left: 20rpx;
  padding-bottom: 30rpx;
}

.form-group text {
  width: 150rpx;
}
.pick text{
  width: 150rpx;
}

.form-group input,.form-group textarea {
  flex: 1;
  height: 50rpx;
  width: 400rpx;
  border-bottom: 1rpx solid #ccc;
  border-radius: 2mm;
  padding: 5rpx;
  
}

.description-group {
  align-items: flex-start;
}

.description-group textarea {
  height: 160rpx;
  width: 500rpx;
  border: 1rpx solid #ccc;
  padding: 5rpx;
}

.container3{
  display: flex;
}

.upload-group {
  margin-top: 80rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  /*align-items: flex-start;*/
  padding: 45rpx;
  width: 600rpx; /* 调整宽度为600rpx */
  height: 300rpx;
  background-color: #fff;
  border-radius: 5mm;
}

.upload-group text{
  width: 150rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;

  
}
.image-list view {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.image-list view image {
  width: 100%;
  height: 100%;
}
.image-list view .delete-btn {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 20rpx;
  height: 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 12rpx;
  padding: 5rpx;
  border-radius: 50%;
  opacity: 0.8;
}
.upload-btn {
  margin-top: 10rpx;
  background-color: #577A88;
  color: #fff;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 4rpx;
}

.publish-btn {
  width: 400rpx;
  height: 80rpx; /* 设置按钮高度，可以根据需要调整 */
  background-color: #577A88; /* 设置按钮背景颜色，可以根据需要修改 */
  color: #fff; /* 设置按钮文本颜色，可以根据需要修改 */
  border: none; /* 移除按钮边框 */
  border-radius: 10rpx; /* 设置按钮圆角半径，可以根据需要修改 */
  font-size: 35rpx; /* 设置按钮文本字号，可以根据需要修改 */
  text-align: center; /* 水平居中文本 */
  line-height: 50rpx; /* 垂直居中文本 */
  margin-top: 30rpx;
}

.publish-content{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.success-message {
  text-align: center;
  color: #007bff;
  font-size: 16rpx;
  margin-top: 20rpx;
}
.con_text{
  align-items: center;
  text-align: center;
  margin-bottom: 20rpx;
  font-weight: bold;
  font-size: 35rpx;
}
.create-page{
  background-color:#eeeeee;
}
.page {
  position: relative; /* 设置页面为相对定位 */
  /* 其他样式属性 */
}
.date-picker2{
  margin-left: 40rpx;
}
.radio-label{
  margin-left: 50rpx;
}

.star {
  color: red; /* 可自定义星号的颜色 */
  font-size: 16px; /* 可自定义星号的大小 */
  margin-right: -70px; /* 可自定义星号与输入框之间的间距 */
  white-space: nowrap;
}
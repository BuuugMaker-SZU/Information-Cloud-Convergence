/* pages/homepage/homepage.wxss */
.tabbar {
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 50px;
  width: 100%;
  background-color: #fff;
  border-top: 1px solid #ccc;
}

.tabbar-item {
  padding: 29.5px;
  padding-top: 15px;
  border: rgb(231, 217, 224) solid 1px;
  width: 50%;
  text-align: center;
  color: rgb(131, 131, 131);
}

.tabbar-item[selected] {
  color: #1afa29;
}

.search-icon {
  width: 28rpx;
  height: 28rpx;
}

.search-text {
  padding-left: 15rpx;
  font-size: 28rpx;
}

/* 搜索框底部 */
.searchbox-bottom {
  height: 80rpx;
  color: #000;
  background-color: #f5f5f5;
  border: rgb(241, 238, 238) solid;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 搜索框本身 */
.search-box {
  height: 60rpx;
  width: 600rpx;
  background-color: rgb(255, 255, 255);
  display: flex;
  align-items: center;
  border-radius: 8rpx;
  padding-left: 20rpx;
}

/* 居中类 */
.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 轮播图样式 */
.swipercontainer {
  padding-top: 10rpx;
  height: 300rpx;
  width: 630rpx;
  padding-bottom: 10rpx;
}

.swiper-item1 {
  height: 100%;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 40rpx;
  color: rgb(255, 255, 255);
  background-color: rgb(255, 255, 255);
}

/* 分类搜索样式底部 */
.retrieval-bottom {
  height: 70rpx;
  background-color: #f5f5f5;
  justify-content: space-around;
  display: flex;
}

/* 箭头下 */
.icon {
  padding-left: 12rpx;
  padding-top: 4rpx; 
  width: 20rpx;
  height: 20rpx;
}


/* 分类搜索样式本身 */
.retrieval {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 160rpx;
  font-size: 26rpx;
  background-color: white;
}
.list-icon {
  margin-top: 20rpx;
  margin-right: 5rpx;
  width: 40rpx;
  height: 40rpx;
}

/* 活动类型内部 */
.inner-component {
  position: absolute;
  top: 480rpx;
  left: 0;
  width: 100%;
  z-index: 999;
}

.type-title {
  padding-left: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
  font-weight: 550;
  font-size: 35rpx;
  background-color: #f5f5f5;
}

.grid-item {
  display: flex;
  flex-wrap: wrap;
  background-color: #f5f5f5;
}

.activity-type-row {
  width: 236rpx;
  box-sizing: border-box;
}

.activity-type-item {
  background-color: #ffffff;
  border: 1px solid rgb(219, 219, 219);
  border-radius: 8rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 40rpx;
  text-align: center;
  /* 添加居中样式 */
  display: flex;
  /* 添加弹性布局 */
  justify-content: center;
  /* 水平居中 */
  align-items: center;
  /* 垂直居中 */
}

.activity-type-item-clicked {
  background-color: #ffffff;
  border: 1px solid rgb(69, 255, 162);
  color: rgb(6, 216, 149);
  border-radius: 8rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 40rpx;
  text-align: center;
  /* 添加居中样式 */
  display: flex;
  /* 添加弹性布局 */
  justify-content: center;
  /* 水平居中 */
  align-items: center;
  /* 垂直居中 */
}
.submit-button-buttom {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  background-color: #f5f5f5;
}

.reset-button {
  background-color: white;
  width: 230rpx;
  height: 75rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 50rpx;
  font-size: 30rpx;
  border-radius: 5rpx;
}

.submit-button {
  background-color: #577A88;
  width: 370rpx;
  height: 75rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: white;
  border-radius: 5rpx;
}



/* 展示底部 */
.bottom {
  background-color: #f5f5f5;
  margin-top: 0rpx;
}

/* 展示样式本身 */
.activity-introduction {
  position: relative;
  background-color: #fff;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-bottom: 20rpx;
  border-radius: 30rpx;
  justify-content: space-around;
  display: flex;
}

.left-column {
  width: 300rpx;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.right-column {
  flex: 6;
}
/* 活动展示图片样式 */
.EventImg {
  height: 200rpx;
  width: 200rpx;
}

/* 展示活动标题行样式 */
.activity-title {
  height: 60rpx;
  display: flex;
  flex-direction: row;
}

/* 展示活动标题样式 */
.Title {
  padding-top: 30rpx;
  width: 300rpx;
  font-weight: 600;
}

/* 展示活动状态样式 */
.Status1 {
  padding-top: 30rpx;
  color: red;
  padding-left: 10rpx;
}

.Status2 {
  padding-top: 30rpx;
  color: rgb(165, 161, 161);
  padding-left: 10rpx;
}

/* 展示活动信息样式-活动简介 */
.activity-message {
  color: rgba(0, 0, 0, 0.8);
  /* 使用 rgba 函数设置透明度为 0.5 */
  display: flex;
  justify-content: flex-start;
  height: 82rpx;
  width: 410rpx;
  font-size: 28rpx;
  padding-bottom: 30rpx;
  padding-top: 20rpx;
  overflow: hidden; /* 隐藏溢出内容 */
  display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3; /* 限制为两行 */
  text-overflow: ellipsis; /* 显示省略号 */
}

/* 展示活动信息样式-活动类型+地点 */
.activity-type-location {
  color: rgba(0, 0, 0, 0.6);
  /* 使用 rgba 函数设置透明度为 0.5 */
  display: flex;
  justify-content: flex-start;
  height: 20rpx;
  font-size: 26rpx;
  padding-bottom: 10rpx;
}
/* 信息间的横线 */
.text-line {
  width: 58%;
  height: 1px;
  background-color: rgba(0, 0, 0, 0.137);
  position: absolute;
  top: 240rpx;
}

/* 展示活动信息样式-横线下 */
.activity-time {
  height: 35rpx;
  font-size: 25rpx;
  padding-left: 0%;
  padding-top: 20rpx;
}

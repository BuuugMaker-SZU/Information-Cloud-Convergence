.container {
  display: flex;
  flex-direction: column;
  /*align-items: flex-start;*/
  padding: 20rpx;
}

.form-group {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #ccc;
  padding-bottom: 30rpx;
}

.form-group text {
  width: 180rpx;
}

.form-group input,
.form-group textarea {
  flex: 1;
  height: 50rpx;
  width: 500rpx;
  border: 1rpx solid #ccc;
  padding: 5rpx;
}

.description-group {
  align-items: flex-start;
}

.description-group textarea {
  height: 160rpx;
  width: 500rpx;
  border: 1rpx solid #ccc;
  padding: 5rpx;
}

.upload-group {
  margin-left: 30rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;

  
}
.image-list view {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.image-list view image {
  width: 100%;
  height: 100%;
}
.image-list view .delete-btn {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 20rpx;
  height: 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 12rpx;
  padding: 5rpx;
  border-radius: 50%;
  opacity: 0.8;
}
.upload-btn {
  margin-top: 10rpx;
  background-color: #007aff;
  color: #fff;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 4rpx;
}
